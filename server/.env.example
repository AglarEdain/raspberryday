# Configuration du serveur
PORT=3000
NODE_ENV=development

# Configuration de la base de données
DB_HOST=localhost
DB_PORT=3306
DB_USER=raspberryday
DB_PASSWORD=your_password_here
DB_NAME=raspberryday_db

# Configuration JWT
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Configuration des médias
UPLOAD_DIR=/media/storage
MAX_FILE_SIZE=100000000 # 100MB
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,video/mp4,video/quicktime

# Configuration du serveur WebSocket
WS_PORT=3001

# Configuration des miniatures
THUMBNAIL_WIDTH=300
THUMBNAIL_HEIGHT=300
OPTIMIZED_WIDTH=1920
OPTIMIZED_HEIGHT=1080

# Configuration de la sécurité
CORS_ORIGIN=http://localhost:8080
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100